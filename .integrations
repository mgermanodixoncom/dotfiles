#!/usr/bin/env bash

# Dotfiles integration
export DOTFILES="$HOME/.dotfiles"
export DOTFILES_ALIASES="$DOTFILES/aliases"

# Powerline integration
if which powerline-daemon &> /dev/null && [[ $TERM == xterm-256color ]]; then
    powerline-daemon -q
    export POWERLINE_BASH_CONTINUATION=1
    export POWERLINE_BASH_SELECT=1
    source /usr/share/powerline/bindings/bash/powerline.sh
fi

# direnv Integration
if which direnv &> /dev/null; then
	eval "$(direnv hook bash)"
fi

# Go integration
if which go &> /dev/null; then
    export PATH="$PATH:$GOPATH/bin"
    export GOPATH="$HOME/Programming/Go"
fi

# Composer integration
if which composer &> /dev/null; then
	export PATH="$PATH:$HOME/.config/composer/vendor/bin"
fi

# CEdev integration
if [[ -d /opt/CEdev ]]; then
	export PATH="$PATH:/opt/CEdev/bin"
fi

# Node Version Manager integration
if [[ -e $HOME/.nvm ]]; then
    export NVM_DIR="$HOME/.nvm"
    if [[ -s $NVM_DIR/nvm.sh ]]; then 
        source "$NVM_DIR/nvm.sh"
    fi
    if [[ -s $NVM_DIR/bash_completion ]]; then
        source "$NVM_DIR/bash_completion"
    fi
fi

# Wine integration
if which wine &> /dev/null; then
    export WINEDLLOVERRIDES=winemenubuilder.exe=d
fi

# TIC-80 integration
if which tic80 &> /dev/null; then
	export TIC80_START_PATH=$HOME/Programming/TIC-80
fi
